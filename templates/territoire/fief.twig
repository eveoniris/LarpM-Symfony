{% extends "base.html.twig" %}

{% block title %}Fief{% endblock title %}

{% block body %}

    {% import "filterMacros.html.twig" as macros %}

    <ol class="breadcrumb">
        <li><a href="{{ path('homepage') }}">Accueil</a></li>
        <li class="active">Liste des fiefs</li>
    </ol>

    <div class="well well-sm">

        <div class="header">
            <h5>Liste des fiefs <small>( {{ paginator|length }} fiefs)</small></h5>
            <blockquote>
                Voici la liste des fiefs, des groupes les poss√©dant, et des pays dont ils font partie.
            </blockquote>
        </div>

        <ul class="list-group">
            <li class="list-group-item">
                <div class="btn-toolbar" role="toolbar" aria-label="...">

                    {{ form_start(form, {"action": path('territoire.fief')}) }}

                    <div class="form-group">
                        <div class="input-group">
                            {{ form_widget(form.value) }}
                            {{ form_widget(form.type) }}
                            {{ form_widget(form.pays) }}
                            {{ form_widget(form.province) }}
                            {{ form_widget(form.groupe) }}
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default" data-toggle="tooltup" data-placement="top"
                                        title="Lancer la recherche"><i class="fa fa-search"></i></button>
                                <a class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Reset"
                                   href="{{ path('territoire.fief') }}"><i class="fa fa-refresh"></i></a>
                                <div class="btn-group" role="group" aria-label="...">
                                    <a class="btn btn-secondary" data-toggle="tooltip" data-placement="top"
                                       title="Ajouter un territoire" href="{{ path('territoire.add') }}"><i
                                            class="fa fa-plus"></i> Ajouter</a>
                                    <a class="btn btn-secondary" data-toggle="tooltip" data-placement="top"
                                       title="Imprimer la liste des fiefs" href="{{ path('territoire.print') }}"><i
                                            class="fa fa-print"></i> Imprimer</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    {{ form_end(form) }}

                </div>
            </li>

        </ul>
    </div>

    {% include '_partials/pagination.html.twig' %}

    <table class="table table-striped table-bordered table-condensed">
        <thead>
        <tr>
            <th>
                <a href="{{ path('territoire.fief', {'order_by': 'id', 'order_dir': macros.getDirection(app,'id')|trim})~optionalParameters }}">
                    # {{ macros.getCaret(app,'id') }}
                </a>
            </th>
            <th>
                <a href="{{ path('territoire.fief', {'order_by': 'nom', 'order_dir': macros.getDirection(app,'nom')|trim})~optionalParameters }}">
                    Territoire {{ macros.getCaret(app,'nom') }}
                </a>
            </th>
            <th>
                Province
            </th>
            <th>
                Pays
            </th>
            <th>
                <a href="{{ path('territoire.fief', {'order_by': 'tgr.nom', 'order_dir': macros.getDirection(app,'tgr.nom')|trim})~optionalParameters }}">
                    Groupe {{ macros.getCaret(app,'tgr.nom') }}
                </a>
            </th>
            <th>Nbr de joueurs</th>
        </thead>
        <tbody>
        {% for fief in paginator %}
            <tr>
                <td><a href="{{ path('territoire.detail', {'territoire': fief.id}) }}">{{ fief.id }}</a></td>
                <td><a href="{{ path('territoire.detail', {'territoire': fief.id}) }}">{{ fief.nom }}</a></td>
                <td>
                    {% if fief.territoire.id is defined %}
                    <a href="{{ path('territoire.detail', {'territoire': fief.territoire.id}) }}">
                        {{ fief.territoire.nom }}
                    </a>
                    {% else %}
                        <a href="{{ path('territoire.detail', {'territoire': fief.id}) }}">{{ fief.nom }}</a>
                    {% endif %}
                </td>
                <td>
                    {% if fief.territoire.territoire.id is defined %}
                        <a href="{{ path('territoire.detail', {'territoire': fief.territoire.territoire.id}) }}">
                            {{ fief.territoire.territoire.nom }}
                        </a>
                    {% else %}
                        {% if fief.territoire.id is defined %}
                            <a href="{{ path('territoire.detail', {'territoire': fief.territoire.id}) }}">
                                {{ fief.territoire.nom }}
                            </a>
                        {% else %}
                            <a href="{{ path('territoire.detail', {'territoire': fief.id}) }}">{{ fief.nom }}</a>
                        {% endif %}
                    {% endif %}
                </td>
                <td>
                    {% if fief.groupe %}
                        <a href="{{ path('groupe.detail', {'groupe': fief.groupe.id}) }}">#{{ fief.groupe.numero }}
                            - {{ fief.groupe.nom }}</a>
                    {% else %}
                        -
                    {% endif %}
                </td>
                <td>
                    {% if fief.groupe %}
                        {% for session in fief.groupe.groupeGns %}
                            <span
                                class="badge bg-secondary rounded-pill">{{ session.gn.label }} : {{ session.participants|length }}</span>
                        {% endfor %}
                    {% else %}
                        -
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock body %}
