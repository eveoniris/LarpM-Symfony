{% extends "base.html.twig" %}

{% block title %}Groupes{% endblock title %}

{% block body %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path("territoire.list") }}">Liste des territoires</a></li>
		<li><a href="{{ path("territoire.detail", {'territoire': territoire.id}) }}">{{ territoire.nom }}</a></li>
		<li class="active">Retirer une construction d'un  groupe</li>
	</ol>
	
	<div class="well well-sm">
		{{ form_start(form, {"attr": {"action": path('territoire.construction.remove',{'territoire': territoire.id, 'construction': construction.id}) }}" method="POST">
			<div class="form-group">
				<p>Etes-vous certain de vouloir retirer la construction {{ construction.fullLabel }} du territoire {{ territoire.nom }} ?</p>
			</div>
			
			{{ form(form) }}
		{{ form_end(form) }}
	</div>
{% endblock %}