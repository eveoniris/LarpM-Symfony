{% extends "layout.twig" %}

{% block title %}Groupes{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path("territoire.admin.list") }}">Liste des territoires</a></li>
		<li><a href="{{ path("territoire.admin.detail", {'territoire': territoire.id}) }}">{{ territoire.nom }}</a></li>
		<li class="active">Retirer une construction d'un  groupe</li>
	</ol>
	
	<div class="well well-sm">
		<form action="{{ path('territoire.construction.remove',{'territoire': territoire.id, 'construction': construction.id}) }}" method="POST">
			<div class="form-group">
				<p>Etes-vous certain de vouloir retirer la construction {{ construction.fullLabel }} du territoire {{ territoire.nom }} ?</p>
			</div>
			{% form_theme form 'Form/bootstrap_3_layout.html.twig' %}
			{{ form(form) }}
		</form>
	</div>
{% endblock %}