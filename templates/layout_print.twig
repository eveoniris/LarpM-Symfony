			#info {
				border : 1px solid #000;
				margin : 50px 50px 50px 50px;
				padding: 50px 50px 50px 50px;
				font-size : 18px;
				font-weight: bold;
				text-align : center;
				background-color : lightgreen;
			}
		</style>
		
		{% block style %}
		{% endblock style %}
