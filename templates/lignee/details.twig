                                {% else %}
                                <td><a href="{{ path('personnage.admin.detail', {'personnage': personnageLignee.parent2.id}) }}">{{ personnageLignee.parent2.nom }} ({{ personnageLignee.parent2.ageReel }} ans)</a></td>
