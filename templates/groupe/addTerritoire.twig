{% extends "layout.twig" %}

{% block title %}Groupes{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path("groupe.admin.list") }}">Liste des groupes</a></li>
		<li><a href="{{ path("groupe.detail", {'index': groupe.id}) }}">{{ groupe.nom }}</a></li>
		<li class="active">Ajouter un territoire à un groupe</li>
	</ol>
	
	<div class="well well-sm">
		<form action="{{ path('groupe.territoire.add',{'groupe': groupe.id}) }}" method="POST">
			<div class="form-group">
				<p>Attention !  Si le territoire choisi est déjà contrôlé par un autre groupe, celui-ci perdra le contrôle du territoire</p>
			</div>
			{% form_theme form 'Form/bootstrap_3_layout.html.twig' %}
			{{ form(form) }}
		</form>
	</div>
{% endblock %}