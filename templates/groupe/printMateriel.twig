{% extends "base.print.twig" %}

{% block content %}

    {% for participant in participants %}
        {% if participant.personnage %}

            {% include 'personnage/fragment/enveloppe.twig' with {'personnage': participant.personnage, 'extends': false } %}

            {#  break every two player ?  #}
            {% if app.request.get('compact') == 1 %}
                {% if (loop.index%2 == 0) %}
                    <hr class="print-page-break compact-mode"/>
                {% else %}
                    <hr class="compact-mode"/>
                {% endif %}
            {% else %}
                <hr class="print-page-break"/>
            {% endif %}

        {% endif %}
    {% else %}
        Attention ! Pas de personnage.
        <hr class="print-page-break"/>
    {% endfor %}


{% endblock content %}
