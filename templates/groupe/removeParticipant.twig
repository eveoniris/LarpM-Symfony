{% extends "base.html.twig" %}

{% block title %}Groupes{% endblock title %}

{% block body %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path("groupe.admin.list") }}">Liste des groupes</a></li>
		<li><a href="{{ path("groupe.detail", {'groupe': groupe.id}) }}">{{ groupe.nom }}</a></li>
		<li class="active">Retirer un participant</li>
	</ol>
	
	<div class="well well-sm">
		{{ form_start(form, {"attr": {"action": path('groupe.admin.participant.remove',{'groupe': groupe.id, 'participant': participant.id}) }}" method="POST">
			<div class="form-group">
				<p>Etes-vous certain de vouloir retirer l'utilisation {{ participant.user.displayName }} du groupe {{ groupe.nom }} ?</p>
			</div>
			<div class="form-group clearfix">
				<div class="col-sm-8 col-sm-offset-2">
					<button type="submit" class="btn btn-primary">Retirer du groupe</button>
				</div>
			</div>
			
		{{ form_end(form) }}
	</div>
{% endblock %}