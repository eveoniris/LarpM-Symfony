{% extends "layout.twig" %}

{% block title %}{{ groupe.nom }}{% endblock title %}

{% block content %}

    <div class="well bs-component">
        <form action="{{ path('groupe.personnage.add', {'index': groupe.id}) }}" method="POST">
            <fieldset>
                <legend>{{ groupe.nom }} - <small>Cr√©ation d'un personnage</small></legend>

                {{ form_row(form.nom) }}
                {{ form_row(form.surnom) }}
                {{ form_row(form.age) }}
                {{ form_row(form.genre) }}
                {{ form_row(form.territoire) }}
                {{ form_row(form.intrigue) }}
                {{ form_row(form.classe) }}

                <div class="row">
                    {% for classe in classes %}
                        <div class="col-xs-12 col-md-12">
                            {{ include("classe/fragment/info.twig", {'classe' : classe}) }}
                        </div>
                    {% endfor %}
                </div>
                {{ form_rest(form) }}
            </fieldset>
        </form>
    </div>
{% endblock content %}

{% block javascript %}

{{ parent() }}

{%  endblock javascript %}
