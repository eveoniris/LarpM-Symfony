{% extends "base.html.twig" %}

{% block title %}Jetons{% endblock title %}

{% block body %}

    {% include '_partials/breadcrumb.twig' with {'items' :
        [
            {'name' : 'Liste des jetons', 'route': path('token.list') },
            {'name' : "Détail du jeton #{token.label}" },
        ]
    } %}

    <div class="well bs-component">
        <div class="header">
            <h5>Détail d'un jeton</h5>
        </div>

        <table class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>Libellé</th>
                <td>{{ token.label }}</td>
            </tr>
            <tr>
                <th>Tag</th>
                <td>{{ token.tag }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ token.description|markdown_to_html }}</td>
            </tr>
        </table>

        <div class="btn-toolbar d-flex justify-content-center" role="toolbar">
            <div class="btn-group" role="group">
                <a class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="bottom"
                   title="Modifier"
                   href="{{ path('token.update',{'token':token.id}) }}"><i
                            class="fa fa-pencil"></i> Modifier</a>
                <a class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="bottom"
                   title="Supprimer"
                   href="{{ path('token.delete',{'token':token.id}) }}"><i
                            class="fa fa-eraser"></i> Supprimer</a>
            </div>
        </div>
    </div>

{% endblock body %}
