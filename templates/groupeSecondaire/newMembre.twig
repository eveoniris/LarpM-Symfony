{% extends "layout.twig" %}

{% block title %}Groupe secondaire{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path("groupeSecondaire.admin.list") }}">Liste des groupes secondaires</a></li>
		<li><a href="{{ path('groupeSecondaire.admin.detail', {'groupe': groupeSecondaire.id}) }}">{{ groupeSecondaire.label }}</a></li>
		<li class="active">Ajouter un membre</li>
	</ol>
	
	<div class="well bs-component">
		<form action="{{ path('groupeSecondaire.admin.newMembre', {'groupeSecondaire': groupeSecondaire.id}) }}" method="POST" {{ form_enctype(form) }}>
			<fieldset>
				<legend>Ajout d'un membre au groupe secondaire {{ groupeSecondaire.label }}</legend>
					{% form_theme form 'Form/bootstrap_3_layout.html.twig' %}
					{{ form(form) }}
			</fieldset>
		</form>
	</div>
	
{% endblock content %}