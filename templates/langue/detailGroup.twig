{% extends "base.html.twig" %}

{% block title %}Langues{% endblock title %}

{% block body %}

    {% include '_partials/breadcrumb.twig' with {'items' :
        [
            {'route' : path('langue.index'), 'name' : 'Gestion des langues'},
            {'name' : groupeLangue.label}
        ]} %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-md-8">


                <div class="list-group">

                    <div class="list-group-item">
                        <h4 class="list-group-item-heading">Couleur</h4>
                        <p class="list-group-item-text">
                            {% if not groupeLangue.couleur %}
                                <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                                Attention, ce groupe de langue n'a pas de couleur associ√©e.
                            {% else %}
                                {{ groupeLangue.couleur }}
                            {% endif %}
                        </p>
                    </div>

                    <div class="list-group-item">
                        <h4 class="list-group-item-heading">Liste des langues dans ce groupe
                            ({{ groupeLangue.langues|length }} langues)</h4>
                        <p class="list-group-item-text">
                        <ul>
                            {% for langue in groupeLangue.langues %}
                                <li><a href="{{ path('langue.detail',{'langue': langue.id}) }}">{{ langue.label }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                        </p>
                    </div>

                    <div class="list-group-item">
                        <div class="btn-group" role="group" aria-label="...">
                            <a class="btn btn-primary" role="button"
                               href="{{ path('langue.updateGroup', {groupeLangue : groupeLangue.id}) }}">Modifier</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
