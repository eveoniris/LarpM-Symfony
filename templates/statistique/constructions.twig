{% extends "base.html.twig" %}

{% block title %}Competences par GN{% endblock title %}

{% block body %}

    {% include '_partials/breadcrumb.twig' with {'items' :
        [
            {'name' : 'Statistiques', 'route': path('stats.list') },
            {'name' : 'Détails des constructions de fiefs'},
        ]
    } %}

    <div class="d-flex justify-content-end">

        <div class="btn-toolbar" role="toolbar" aria-label="...">
            <div class="btn-group" role="group" aria-label="...">
                <a class="btn btn-secondary" data-toggle="tooltip" data-placement="bottom"
                   title="Télécharger" href="{{ path('stats.constructions.csv') }}"><i
                            class="fa fa-file-csv"></i>
                    Télécharger</a>
                <a class="btn btn-secondary" data-toggle="tooltip" data-placement="bottom"
                   title="format JSON" href="{{ path('stats.constructions.json') }}"><i
                            class="fa fa-file-lines"></i>
                    Json API</a>
            </div>
        </div>
    </div>

    <div class="well well-sm">
        <div class="header">
            <h5>Détails des constructions de fiefs</h5>
        </div>

        <table class="table table-striped table-bordered table-condensed table-hover">
            {% include '_partials/thead.twig' with  { 'route': 'trombinoscope.index', 'rows': [
                {'name' : 'Fief', 'css': 'text-center'},
                {'name' : 'Bâtiment'},
                {'name' : 'Description'},
                {'name' : 'Défense'},
            ]} %}
            <tbody>
            {% for construction in constructions %}
                <tr>
                    <td class="text-center col-1">{{ construction.fief }}</td>
                    <td class="col-1">{{ construction.batiment }}</td>
                    <td class="col-9">{{ construction.description|raw }}</td>
                    <td class="text-center col-1">{{ construction.defense }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}
