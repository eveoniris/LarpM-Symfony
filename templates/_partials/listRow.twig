{# ROW #}
<div class="container bg-body border border-secondary border-top-0">
    <div class="row row-cols-2">
        <div class="align-middle lh-lg col-sm-2 text-center bg-body-secondary border-end fw-bold m-0 overflow-hidden">
            {{ title }}
        </div>
        <div class="align-middle lh-lg col-sm-10 m-auto">
            <div class="d-flex justify-content-between">
                <div>
                    {{ text }}
                </div>
                {% if item.collapse.id is defined %}
                    <button class="btn btn-sm btn-secondary ms-2" role="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#{{ item.collapse.id }}"
                            aria-expanded="false"
                            title="historique"
                            aria-controls="{{ item.collapse.id }}">
                        <i class="fa {% if item.collapse.icon is defined %}{{item.collapse.icon}}{% else %}fa-info{% endif %}" aria-hidden="true"></i>
                    </button>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% if item.collapse.id is defined %}
    {% include '_partials/listCollapse.twig' with {'idCollapse': item.collapse.id, 'text': item.collapse.text} %}
{% endif %}
