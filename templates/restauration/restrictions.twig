{% extends "base.html.twig" %}

{% block title %}Lieux de restauration{% endblock title %}

{% block body %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('restauration.list') }}">Liste des lieux de restauration</a></li>
		<li class="active">{{ restauration.label }} - restrictions alimentaires</li>
	</ol>
	
	<div class="well well-sm">

		<div class="header">
			<h5>{{ restauration.label }} - restrictions alimentaires</h5>
		</div>

		{% for restrictionByGn in restrictions %}
			<div class="header"><h5>Restrictions alimentaires pour {{ restrictionByGn.gn.label }}</h5></div>
			<ul class="list-group">
				{% for restriction in restrictionByGn.restrictions %}
					<li class="list-group-item">{{ restriction.label }} -- nombre de personnes : {{ restrictionByGn.total }}</li>
				{% endfor %}			
			</ul>
		{% endfor %}			
	</div>
	
{% endblock %}
