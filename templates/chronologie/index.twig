{% extends "base.html.twig" %}

{% block title %}Chronologies{% endblock title %}

{% block body %}
	
	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li class="active">Liste des chronologies</li>
	</ol>

	<div class="well well-sm">
		<div class="header">
			<h5>Liste des chronologies <small>( {{ paginator|length }} chronologies)</small></h5>
		</div>

		<div class="btn-toolbar" role="toolbar" aria-label="...">
			<div class="btn-group" role="group" aria-label="...">
				<a class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Ajouter une chronologie" href="{{ path('chronologie.admin.add') }}"><i class="fa fa-plus"></i> Ajouter</a>
			</div>
		</div>
	</div>
		
	{% include '_partials/pagination.html.twig' %}
	
	<table class="table table-striped table-bordered table-condensed table-hover">
		<thead>
			<tr>
				<th>ID</th>
				<th>Pays</th>
				<th>Date</th>
				<th>Visibilit√©</th>
				<th>Description</th>
				<th/>
				<th/>
			</tr>
		</thead>
		<tbody>
			{% for chrono in paginator %}
				<tr>
					<td>{{ chrono.id }}</td>
					<td>{{ chrono.territoire.nom }}</td>
					<td>{{ chrono.year }} {{ chrono.month }} {{ chrono.day }}</td>
					<td>{{ chrono.visibilite }}</td>
					<td>{{ chrono.description|markdown_to_html }}</td>
					<td>
						<a 	class="btn btn-default"
							title="Modifier" 
							data-toggle="tooltip" data-placement="top"
							href="{{ path('chronologie.admin.update', {chronologie: chrono.id}) }}">
							<i class="fa fa-pencil"></i>
						</a>
					</td>
					<td>
						<a 	class="btn btn-danger"
							title="Supprimer" 
							data-toggle="tooltip" data-placement="top"
							href="{{ path('chronologie.admin.remove', {chronologie: chrono.id}) }}">
							<i class="fa fa-times"></i>
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	{% include '_partials/pagination.html.twig' %}
	
{% endblock %}
