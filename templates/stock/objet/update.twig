{% extends "base.html.twig" %}

{% block body %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('stockObjet.index') }}">Objets</a></li>
		<li><a href="{{ path('stockObjet.detail', {'objet': objet.id}) }}">{{ objet.nom }}</a></li>
		<li>Modification</li>
	</ol>

<div class="well well-sm">

	<div class="header">
		<h5>Modification d'un objet</h5>
	</div>

	<div class="container-fluid">
	    {% if objet.photo %}
        	<img src="{{ path('stockObjet.photo',{'objet': objet.id}) }}" alt="{{ objet.photo.name }}" class="img-responsive" />
        {% endif %}
		<div class="row">
			<div class="col-xs-12 col-md-8">
				{{ include("stock/objet/fragment/form.twig",{'action': path('stockObjet.update',{'objet':objet.id}), 'form' : form}) }}
			</div>
		</div>
	</div>

</div>	
{% endblock body %}
