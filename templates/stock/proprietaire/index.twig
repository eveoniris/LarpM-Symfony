{% extends "base.html.twig" %}

{% block title %}Liste des propriétaires{% endblock title %}

{% block body %}

    <ol class="breadcrumb">
        <li><a href="{{ path('homepage') }}">Accueil</a></li>
        <li class="active">Liste des propriétaires</li>
    </ol>

    <div class="well well-sm">

        <div class="header">
            <h5>Liste des propriétaires</h5>
        </div>

        <div class="card mb-3 border-info">
            <div class="card-header ">
                <i class="fa fa-info-circle text-info"></i> Qu'est-ce qu'un propriétaire ?
            </div>
            <div class="card-body">
                <p class="card-text">
                    Les propriétaires sont les personnes (morale ou physique) qui possédent l'objet.
                </p>
            </div>
        </div>

        {% if proprietaires|length == 0 %}
            <div class="card mb-3 border-warning">
                <div class="card-header "><i class="fa fa-warning text-warning"></i> Attention !</div>
                <div class="card-body">
                    <p class="card-text">
                        Aucun propriétaire n'est défini ! Vous devez définir au moins un propriétaire.
                    </p>
                </div>
            </div>
        {% endif %}

        <div class="btn-toolbar mb-3" role="toolbar" aria-label="...">
            <a href="{{ path('stockProprietaire.add') }}" class="btn btn-secondary">
                <i class="fa fa-plus"></i> Ajouter un propriétaire
            </a>
        </div>

    </div>

    {{ include("stock/proprietaire/list.twig", {'proprietaires' : proprietaires}) }}

{% endblock %}
