{% extends "base.html.twig" %}

{% block title %}Construction{% endblock title %}

{% block body %}

	{% include '_partials/breadcrumb.twig' with {'items' :
        [
            {'name' : 'Liste des constructions', 'route': path('construction.index') },
			{'name' : construction.label, 'route': path('construction.detail', {'construction':construction.id})  },
        ]
    } %}

<div class="well well-sm">

	<div class="header">
		<h5>Détail d'une construction</h5>
	</div>

	<div class="d-flex justify-content-end">

		<div class="btn-toolbar d-flex justify-content-between" role="toolbar">
			<div class="btn-group" role="group">
				<a class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="bottom"
				   title="Personnages associés"
				   href="{{ path('construction.territoires',{'construction':construction.id}) }}"><i
							class="fa fa-map"></i> Territoires</a>
				<a class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="bottom"
				   title="Ajouter"
				   href="{{ path('construction.add') }}"><i
							class="fa fa-plus"></i> Ajouter</a>
				<a class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="bottom"
				   title="Modifier"
				   href="{{ path('construction.update',{'construction':construction.id}) }}"><i
							class="fa fa-pencil"></i> Modifier</a>
				<a class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="bottom"
				   title="Supprimer"
				   href="{{ path('construction.delete',{'construction':construction.id}) }}"><i
							class="fa fa-eraser"></i> Supprimer</a>
			</div>
		</div>
	</div>

	<div class="panel panel-default">
		<div class="panel-body">

			<div class="list-group">

				<div class="list-group-item">
					<div class="list-group-item-heading fw-bold mb-1">Label</div>
					<div class="list-group-item-text ps-1">{{ construction.label }}</div>
				</div>

				<div class="list-group-item">
					<div class="list-group-item-heading fw-bold mb-1">Défense</div>
					<div class="list-group-item-text ps-1">{{ construction.defense }}</div>
				</div>

				<div class="list-group-item mb-4">
					<div class="list-group-item-heading fw-bold mb-1">Description</div>
					<div class="list-group-item-text ps-1">{{ construction.description|markdown_to_html }}</div>
				</div>

			</div>
		</div>
	</div>

	</div>

{% endblock body %}
