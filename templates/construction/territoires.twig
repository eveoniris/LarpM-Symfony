{% extends "base.html.twig" %}

{% block title %}Constructions{% endblock title %}

{% block body %}

	{% include '_partials/breadcrumb.twig' with {'items' :
		[
			{'name' : 'Liste des constructions', 'route': path('construction.index') },
			{'name' : construction.label, 'route': path('construction.detail', {'construction':construction.id})  },
			{'name' : 'Liste des territoires' },
		]
	} %}

	{% include 'territoire/_searchList.twig' with{
			'actionPath' : path('construction.territoires', {'construction':construction.id}),
			'searchTitle' : "Liste des territoires ayant la construction #{construction.label} <small>( #{paginator|length} territoires )</small>",
			'paginator': paginator
	} %}

{% endblock body %}
