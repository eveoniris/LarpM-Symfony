{% extends "layout.twig" %}

{% block title %}Economie{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li class="active">Economie</li>
	</ol>
	
	<nav class="navbar navbar-default" style="padding-right: 5px;">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2" aria-expanded="false">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
			</button>
			<span class="navbar-brand">
			</span>
		</div>
		<div id="bs-example-navbar-collapse-2" class="collapse navbar-collapse">
			<ul class="nav navbar-nav navbar-right">
				<a href="{{ path('economie.csv') }}" class="btn btn-primary navbar-btn">Fichier CSV</a>
			</ul>
		</div>
	</nav>
	
	<div class="well well-sm">
		<div class="alert alert-info">
			Ces informations correspondent aux groupes participant au prochain jeu <strong>{{ gn.label }}</strong>.
		</div>
		
		<h3>Masse monétaire</h3>
		
		prévue au début du jeu : <strong>{{ masseMonetaire }} PA</strong>
		
		<h3>Ressources disponibles :</h3>
		
		<ul>
		{% for ressource in ressources %}
			<li>
				<strong>{{ ressource.label }}</strong> : {{ ressource.nombre }}
				<p style="text-indent:20px;">
					{% for territoire in ressource.territoires %}
						<a href="{{ path('territoire.detail', {'territoire': territoire.id}) }}">{{ territoire.nom }}</a>,
					{% endfor %}
				</p>
			</li>
		{% endfor %}
		</ul>
		
		<h3>Ingrédients disponibles :</h3>
				
		<ul>
		{% for ingredient in ingredients %}
			<li>
				<strong>{{ ingredient.label }}</strong> : {{ ingredient.nombre }}
				<p style="text-indent:20px;">
					{% for territoire in ingredient.territoires %}
						<a href="{{ path('territoire.detail', {'territoire': territoire.id}) }}">{{ territoire.nom }}</a>,
					{% endfor %}
				</p>
			</li>
		{% endfor %}
		</ul>
		
		<h3>Constructions :</h3>
		
		<ul>
		{% for construction in constructions %}
			<li>
				<strong>{{ construction.label }}</strong> : {{ construction.nombre }}
				<p style="text-indent:20px;">
					{% for territoire in construction.territoires %}
						<a href="{{ path('territoire.detail', {'territoire': territoire.id}) }}">{{ territoire.nom }}</a>,
					{% endfor %}
				</p>
			</li>
		{% endfor %}
		</ul>
	</div>
	
{% endblock content %}