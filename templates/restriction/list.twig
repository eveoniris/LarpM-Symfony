{% extends "base.html.twig" %}

{% block title %}Restrictions alimentaires{% endblock title %}

{% block body %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li class="active">Liste des restrictions alimentaires</li>
	</ol>

	<div class="well well-sm">
		<div class="header">
			<h5>Liste des restrictions alimentaires</h5>
		</div>

		<div class="btn-toolbar" role="toolbar" aria-label="...">
			<div class="btn-group" role="group" aria-label="...">
				<a class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Ajouter une restriction" href="{{ path('restriction.add') }}"><i class="fa fa-plus"></i></a>
				<a class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Liste par lieu de restauration" href=""><i class="fa fa-coffee"></i></a>
			</div>
		</div>
	</div>

	{% include '_partials/pagination.html.twig' %}
	
		<table class="table table-condensed table-striped table-bordered">
			<thead>
				<tr>
					<th>Nom</th>
					<th>Date de création</th>
					<th>Date de modification</th>
					<th>Créateur</th>
					<th>Quantité</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for restriction in paginator %}
				<tr>
					<td>{{ restriction.label }}</td>
					<td>{{ restriction.creationDate|date('Y-m-d') }}</td>
					<td>{{ restriction.updateDate|date('Y-m-d') }}</td>
					<td>{{ restriction.auteur.name }}</td>
					<td>{{ restriction.users|length }}</td>
					<td>
						<div class="btn-toolbar pull-right" role="toolbar" aria-label="...">
							<div class="btn-group" role="group" aria-label="...">
								<a class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Modifier" href="{{ path('restriction.update',{'id':restriction.id}) }}"><i class="fa fa-pencil"></i></a>
								<a class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Détail" href="{{ path('restriction.detail', {'id':restriction.id}) }}"><i class="fa fa-eye"></i></a>
								<a class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Supprimer" href="{{ path('restriction.delete',{'id':restriction.id}) }}"><i class="fa fa-eraser"></i></a>
							</div>
						</div>
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>

	{% include '_partials/pagination.html.twig' %}
	
{% endblock %}
