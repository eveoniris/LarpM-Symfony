{% extends "base.html.twig" %}

{% block title %}Classes{% endblock title %}

{% block body %}

	<div class="container-fluid">
		<div class="row">
			<div class="col-xs-12 col-md-8">
								
				<div class="well bs-component">
					<form action="{{ path('classe.add') }}" method="POST" {{ form_enctype(form) }} novalidate>
						<fieldset>
							<legend>Ajout d'une classe</legend>
								{% form_theme form 'Form/bootstrap_3_layout.html.twig' %}
								{{ form(form) }}
						</fieldset>
					</form>
				</div>
				
			</div>
		</div>
	</div>
	
{% endblock body %}

{% block javascript %}

	{{ parent() }}

	{# inclusion du plugin tinymce pour la saisie du post #}   
	<script src="{{ app.request.basepath }}/js/tinymce/tinymce.min.js"></script>

	<script type="text/javascript">
		tinyMCE.init({
				mode: "textareas",
				theme: "modern",
				plugins : "spellchecker,insertdatetime,preview", 
		});
		
	</script>

{% endblock javascript %}