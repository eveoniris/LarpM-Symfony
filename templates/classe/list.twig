{% extends "base.html.twig" %}

{% block title %}Classes{% endblock title %}

{% block body %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li class="active">Liste des classes</li>
	</ol>

	<div class="well well-sm bs-component">

		<div class="header">
			<h5>Liste des classes <small>( {{ classes|length }} classes )</small></h5>
		</div>

		{% if is_granted('ROLE_REGLE', app.user) %}
			<div class="btn-toolbar" role="toolbar" aria-label="...">
				<div class="btn-group" role="group" aria-label="...">
					<a class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Ajouter une classe"
					   href="{{ path('classe.add') }}"><i class="fa fa-plus"></i> Ajouter</a>
				</div>
			</div>
		{% endif %}
	</div>

	{% include 'fragment/competenceFamilies' with {'classes': classes} %}

{% endblock %}
