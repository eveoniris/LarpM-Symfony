{% extends "base.html.twig" %}

{% block title %}Fanatisme{% endblock title %}

{% block body %}

{% include '_partials/breadcrumb.twig' with {'items' :  [{'name' : 'Niveaux de religion'}]} %}

<ul class="list-group">
	{%  for religionLevel in religionLevels %}
	<li class="list-group-item">
		<div class="row">
			<div class="col-md-8">
				<h4 class="list-group-item-heading">
					{{ religionLevel.label }} 
				</h4>
				<p class="list-group-item-text">		
					<p class="text-default">{{ religionLevel.description }} ...</p>
				</p>
			</div>
		</div>
	</li>
	{% endfor %}
</ul>
	
{% endblock %}
