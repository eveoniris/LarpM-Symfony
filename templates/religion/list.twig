{% extends "base.html.twig" %}

{% block title %}Religions{% endblock title %}

{% block body %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage')  }}">Accueil</a></li>
		<li class="active">Les religions</li>
	</ol>

	<div class="well well-sm">

		{% include '_partials/pagination.html.twig' %}

		<table class="table table-condensed table-striped table-bordered">
			<thead>
				<tr>
					<th>Nom</th>
					<th>Blason</th>
					<th>Description</th>
				</tr>
			</thead>
			<tbody>
				{% for religion in paginator %}
				<tr>
					<td>{{ religion.label }}</td>
					<td>{% if religion.blason %}
		      				<img width="160" src="{{ path('religion.blason', {'religion' : religion.getId }) }}" />
		      			{% endif %}
					</td>
					<td>{{ religion.description|markdown_to_html }}</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>

	{% include '_partials/pagination.html.twig' %}

	</div>
	
{% endblock %}
