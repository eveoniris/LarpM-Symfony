{% extends "base.html.twig" %}

{% block title %}Domaine de magie{% endblock title %}

{% block body %}

    <ol class="breadcrumb">
        <li><a href="{{ path('homepage') }}">Accueil</a></li>
        <li><a href="{{ path('magie.domaine.list') }}">Liste des domaines de magie</a></li>
        <li class="active">Supprimer un domaine de magie</li>
    </ol>


    <div class="well well-sm bs-component">
        <div class="header">
            <h5>Supression d'un domaine de magie</h5>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ domaine.label }}</h5>
                    <p class="card-text">{{ domaine.description|markdown_to_html }}</p>
                </div>
            </div>


            {{ form(form) }}
        </div>
    </div>

{% endblock body %}
