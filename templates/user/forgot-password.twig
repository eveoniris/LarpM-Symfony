{% extends "base.html.twig" %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}

    {% include '_partials/breadcrumb.twig' with {'items' : [{'name' : 'Réinitialisation du mot de passe'}]} %}

    <div class="well well-sm bs-component">
        <div class="header">
            <h5>Réinitialisation du mot de passe</h5>
        </div>

        {% include '_partials/cardNotif.twig' with {
            'type' : 'info',
            'content' : "Entrez votre adresse mail, les instructions pour réinitialiser votre mot de passe vous seront envoyés.<br />"
            ~ "Si vous ne recevez pas de mail d\'içi quelques minutes, vérifiez votre dossier spam ou poubelle.
		                L\'expéditeur est <strong>" ~ fromAddress ~ "</strong>."
        } %}

        {{ form(form) }}

        <div class="text-center">

        <a href="{{ path('app_login') }}" style="margin-left: 10px;">Retourner à la page de
            connection</a>
        </div>

    </div>
{% endblock %}
