{% extends "layout.twig"  %}

{% block title %}Email confirmation envoyé{% endblock %}

{% block content %}
        <div class="row">
			<div class="col-md-4">&nbsp;</div>
			<div class="col-md-4">
				<div class="well well-sm">
					<h2>Merci !</h2>
					<blockquote>
				    	<p>Un email a été envoyé à <strong>{{ email }}</strong>.</p>
