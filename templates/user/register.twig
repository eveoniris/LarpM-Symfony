{% extends "layout.twig"  %}

{% block title %}S'enregistrer{% endblock %}

{% block content %}

    {% if app.user %}
        <p>Hello, {{ app.user.displayName }}. You are already registered and signed in.</p>
        <p><a href="{{ path('user.logout') }}">Sign out</a></p>
    {% else %}
        <div class="row">
			<div class="col-md-4">&nbsp;</div>
			<div class="col-md-4">
    			<div class="well well-sm">
    			
			        <div class="header">
			           <h5>Cr√©ation d'un compte LarpManager</h5>
			        </div>
		
			        {% if error %}
			            <div class="alert alert-danger">{{ error|nl2br }}</div>
			        {% endif %}
		
			        <form class="form" method="POST" action="{{ path('user.register') }}">

			            <div class="form-group">
		                    <input class="form-control" name="email" type="email" id="input-email" placeholder="Email" required value="{{ email }}">
			            </div>
			
			
			            <div class="form-group">
		                    <input class="form-control" name="username" type="text" id="input-username" placeholder="Nom d'utilisateur" required value="{{ username }}">
			            </div>
			
			
			            <div class="form-group">
		                    <input class="form-control" name="password" type="password" id="input-password" required placeholder="Mot de passe">
			            </div>
			
			            <div class="form-group">
		                    <input class="form-control" name="confirm_password" type="password" id="input-confirm-password" required placeholder="Confirmez votre mot de passe">
			            </div>
			
			            <div class="form-group">
		                    <button type="submit" class="btn btn-primary">S'enregistrer</button>
			            </div>

			       </form>
				</div>
			</div>
			<div class="col-md-4">&nbsp;</div>
		</div>
    {% endif %}
{% endblock %}
