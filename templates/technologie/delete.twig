{% extends "base.html.twig" %}

{% block title %}Technologie{% endblock title %}

{% block body %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('technologie') }}">Liste des technologies</a></li>
		<li class="active">Supprimer une technologie</li>
	</ol>
	
	
	<div class="well bs-component">
		{{ form_start(form, {"attr": {"action": path('technologie.delete', {'technologie': technologie.id}) }}) }}
			<fieldset>
				<legend>Supression d'une technologie</legend>
					{{ technologie.label }}
					{{ technologie.description|markdown_to_html }}
					
					{{ form(form) }}
			</fieldset>
		{{ form_end(form) }}
	</div>
				
{% endblock body %}
