{% extends "layout.twig" %}

{% block title %}Technologie{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('technologie') }}">Liste des technologies</a></li>
		<li class="active">Supprimer une technologie</li>
	</ol>
	
	
	<div class="well bs-component">
		<form action="{{ path('technologie.delete', {'technologie': technologie.id}) }}" method="POST" {{ form_enctype(form) }}>
			<fieldset>
				<legend>Supression d'une technologie</legend>
					{{ technologie.label }}
					{{ technologie.description|markdown }}
					{% form_theme form 'Form/bootstrap_3_layout.html.twig' %}
					{{ form(form) }}
			</fieldset>
		</form>
	</div>
				
{% endblock content %}