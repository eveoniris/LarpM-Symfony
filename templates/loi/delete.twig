{% extends "layout.twig" %}

{% block title %}Loi{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('loi') }}">Liste des lois</a></li>
		<li class="active">Supprimer une loi</li>
	</ol>
	
	
	<div class="well bs-component">
		<form action="{{ path('loi.delete', {'loi': loi.id}) }}" method="POST" {{ form_enctype(form) }}>
			<fieldset>
				<legend>Supression d'une loi</legend>
					{{ loi.label }}
					{{ loi.description|markdown }}
					{% form_theme form 'Form/bootstrap_3_layout.html.twig' %}
					{{ form(form) }}
			</fieldset>
		</form>
	</div>
				
{% endblock content %}