{% extends "base.html.twig" %}

{% block title %}Intrigues{% endblock title %}

{% block body %}

    {% include '_partials/breadcrumb.twig' with {'items' :
        [
            {'name' : 'Liste des intrigues', 'route': path('groupe.list') },
            {'name' : "Détail de l'intrigue #{intrigue.titre}" }
        ]
    } %}

    <div class="well well-sm">

        <div class="header">
            <h5>Détail d'une intrigue</h5>
        </div>

        <div class="d-flex justify-content-end">
            <div class="btn-toolbar d-flex justify-content-between" role="toolbar">
                <div class="btn-group" role="group">
                    <a class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="bottom"
                       title="Ajouter une intrigue"
                       href="{{ path('intrigue.add') }}"><i
                                class="fa fa-plus"></i> Ajouter</a>
                    <a class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="bottom"
                       title="Ajouter une relecture"
                       href="{{ path('intrigue.relecture.add', {'intrigue':intrigue.id}) }}"><i
                                class="fa fa-plus"></i> Ajouter une relecture</a>
                    <a class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="bottom"
                       title="Modifier"
                       href="{{ path('intrigue.update',{'intrigue':intrigue.id}) }}"><i
                                class="fa fa-pencil"></i> Modifier</a>
                    <a class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="bottom"
                       title="Supprimer"
                       href="{{ path('intrigue.delete',{'intrigue':intrigue.id}) }}"><i
                                class="fa fa-eraser"></i> Supprimer</a>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-6">


                <div class="list-group">

                    <div class="list-group-item">
                        <div class="list-group-item-heading fw-bold mb-1 list-group-item-light">Titre</div>
                        <div class="list-group-item-text ps-1">{{ intrigue.titre }}</div>
                    </div>


                    <hr/>
                    <div class="card text-bg mb-3">
                        <div class="card-header"><h6>Titre</h6></div>
                        <div class="card-body">
                            <div class="card-title">{{ intrigue.titre }}</div>
                        </div>

                        <div class="card-header"><h6>Description</h6></div>
                        <div class="card-body">
                            <div class="card-text">{{ intrigue.description|markdown_to_html }}</div>
                        </div>
                    </div>


                    <div class="card text-bg mb-3">
                        <div class="card-header"><h6>Groupes concernés</h6></div>

                        <ul class="list-group-flush list-group">
                                <li class="list-group-item ps-1">
                                    <a href="">LOREM</a>
                                </li>
                            <li class="list-group-item list-group-item-secondary -text ps-1">
                                <a href="">LOREM</a>
                            </li>

                                {% for intrigueHasGroupe in intrigue.intrigueHasGroupes %}
                                    <li class="list-group-item-text ps-1">
                                        <a href="{{ path('groupe.detail', {'groupe': intrigueHasGroupe.groupe.id}) }}">{{ intrigueHasGroupe.groupe.nom }}</a>
                                    </li>
                                {% else %}
                                    <li>Aucun</li>
                                {% endfor %}

                        </ul>


                    </div>

                </div>


                <h6><i class="fa fa-circle"></i>&nbsp;Groupes concernés</h6>
                <div class="white-box">
                    <ul>
                        {% for intrigueHasGroupe in intrigue.intrigueHasGroupes %}
                            <li>
                                <a href="{{ path('groupe.detail', {'groupe': intrigueHasGroupe.groupe.id}) }}">{{ intrigueHasGroupe.groupe.nom }}</a>
                            </li>
                        {% else %}
                            <li>Aucun</li>
                        {% endfor %}
                    </ul>
                </div>

                <h6><i class="fa fa-circle"></i>&nbsp;Groupes secondaires concernés</h6>
                <div class="white-box">
                    <ul>
                        {% for intrigueHasGroupeSecondaire in intrigue.intrigueHasGroupeSecondaires %}
                            <li>
                                <a href="{{ path('groupeSecondaire.admin.detail', {'groupeSecondaire': intrigueHasGroupeSecondaire.secondaryGroup.id}) }}">{% if intrigueHasGroupeSecondaire.secondaryGroup.secret %}
                                        <span style="color:red;">Secret</span> - {% endif %}{{ intrigueHasGroupeSecondaire.secondaryGroup.label }}
                                </a></li>
                        {% else %}
                            <li>Aucun</li>
                        {% endfor %}
                    </ul>
                </div>

                <h6><i class="fa fa-circle"></i>&nbsp;Documents concernés</h6>
                <div class="white-box">
                    <ul>
                        {% for intrigueHasDocument in intrigue.intrigueHasDocuments %}
                            <li>
                                <a href="{{ path('document.detail', {'document': intrigueHasDocument.document.id}) }}">{{ intrigueHasDocument.document.titre }}</a>
                            </li>
                        {% else %}
                            <li>Aucun</li>
                        {% endfor %}
                    </ul>
                </div>

                <h6><i class="fa fa-circle"></i>&nbsp;Instances concernées</h6>
                <div class="white-box">
                    <ul>
                        {% for intrigueHasLieu in intrigue.intrigueHasLieus %}
                            <li>
                                <a href="{{ path('lieu.detail', {'lieu': intrigueHasLieu.lieu.id}) }}">{{ intrigueHasLieu.lieu.nom }}</a>
                            </li>
                        {% else %}
                            <li>Aucune</li>
                        {% endfor %}
                    </ul>
                </div>

                <h6><i class="fa fa-circle"></i>&nbsp;Evénements</h6>
                <div class="white-box">
                    <ul>
                        {% for intrigueHasEvenement in intrigue.intrigueHasEvenements %}
                            <li>
                                <strong>{{ intrigueHasEvenement.evenement.date }}</strong>&nbsp;:&nbsp;{{ intrigueHasEvenement.evenement.text }}
                            </li>
                        {% else %}
                            <li>Aucun</li>
                        {% endfor %}
                    </ul>
                </div>

                <h6><i class="fa fa-circle"></i>&nbsp;Objectifs</h6>
                <div class="white-box">
                    <ul>
                        {% for intrigueHasObjectif in intrigue.intrigueHasObjectifs %}
                            <li>{{ intrigueHasObjectif.objectif.text }}</li>
                        {% else %}
                            <li>Aucun</li>
                        {% endfor %}
                    </ul>
                </div>

                <h6><i class="fa fa-circle"></i>&nbsp;Intrigue</h6>
                <div class="white-box">
                    {{ intrigue.text|markdown_to_html }}
                </div>

                <h6><i class="fa fa-circle"></i>&nbsp;Résolution</h6>
                <div class="white-box">
                    {{ intrigue.resolution|markdown_to_html }}
                </div>
            </div>
            <div class="col-md-6">
                <h4>Auteur</h4>
                <p>Cette intrigue a été créé par <strong><a
                                href="{{ path('user.view', {'user': intrigue.user.id}) }}">{{ intrigue.user.username }}</a></strong>
                    le <strong>{{ intrigue.dateCreation|date('Y-m-d H:i:s') }}</strong></p>

                <h4>Modifications</h4>
                <ul>
                    {% for modification in intrigue.intrigueHasModifications %}
                        <li>Modification par <a
                                    href="{{ path('user.view', {'user': intrigue.user.id}) }}">{{ modification.user.username }}</a>
                            le <strong>{{ modification.date|date('Y-m-d H:i:s') }}</strong></li>
                    {% else %}
                        <li>Cette intrigue n'a pas encore été modifiée</li>
                    {% endfor %}
                </ul>

                <h4>Relectures</h4>
                {% for relecture in intrigue.relectures %}
                    <div class="white-box">
                        <strong>{{ relecture.date|date('Y-m-d H:i:s') }} :</strong> <strong><a
                                    href="{{ path('user.view', {'user': intrigue.user.id}) }}">{{ relecture.user.username }}</a></strong>
                        a relu l'intrigue. Statut donné : <strong>{{ relecture.statut }}</strong>
                        {{ relecture.remarque|markdown_to_html }}
                    </div>
                {% else %}
                    Aucune relectures n'a été faite.
                {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock body %}
