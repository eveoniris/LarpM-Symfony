{% extends "layout.twig" %}

{% block title %}{{ personnage.publicName }}{% endblock title %}

{% block content %}

<div class="container-fluid">

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage')  }}">Accueil</a></li>
		<li><a href="{{ path('gn.detail', {'gn' : participant.gn.id}) }}">{{ participant.gn.label }}</a></li>
		<li><a href="{{ path('gn.personnage', {'gn': participant.gn.id}) }}">{{ participant.personnage.nom }}</a></li>
		<li class="active">Choix d'une nouvelle potion</li>
	</ol>
	
	<div class="well bs-component">
	<form action="{{ path('participant.personnage.potion',{'participant': participant.id, 'niveau': niveau}) }}" method="POST" {{ form_enctype(form) }}>
		<fieldset>
			<blockquote>Votre comp√©tence vous permet de choisir une nouvelle potion. Le descriptif des potions disponibles est visible en bas de page.</blockquote>
			{% form_theme form 'Form/bootstrap_3_layout.html.twig' %}
			
			{{ form_row(form.potions) }}
			{{ form_rest(form) }}
		</fieldset>
	</form>
	</div>
		
	{% for potion in potions %}
		<div class="well well-sm">
			<div class="header">
				<h5>{{ potion.label }} - Niveau {{ potion.niveau }}</h5>
			</div>
			<p>{{ potion.description|markdown }}</p>
		</div>
	{% endfor %}
</div>

{% endblock content %}