{% extends "base.html.twig" %}

{% block title %}Personnages{% endblock title %}

{% block body %}

    {% include 'personnage/fragment/breadcrumb.twig' with {'name': "Modifier la trombine du personnage"} %}

    <div class="well well-sm">
        <div class="header"><h5>Trombine actuelle</h5></div>

        {% include '_partials/cardNotif.twig' with {'type' : 'info', 'content' : " Téléversez une photo de vous pour le trombinoscope. Ce trombinoscope sera visible par les orgas, et les membres de vos groupes." } %}

        <div class="text-center" data-turbo="false">
            {% if personnage.trombineUrl %}
                <img width="160" src="{{ path('personnage.trombine', {'personnage' : personnage.id }) }}"
                     alt="{{ personnage.publicName }}"/>
            {% else %}
                <img width="160" src="{{ app.request.basepath }}/img/no_trombine.png" alt="no trombine"/>
            {% endif %}
        </div>
    </div>
    <div class="well well-sm">
        <div class="header"><h5>Modifier</h5></div>

        {{ form_start(form, {"attr": {"action": path('personnage.trombine.update', {'personnage': personnage.id}) }}) }}
        <fieldset>
            <legend>Modification de la photo</legend>

            {{ form(form) }}
        </fieldset>
        {{ form_end(form) }}
    </div>

{% endblock body %}
