{% if css is not defined %}
    {% set css = 'well' %}
{% endif %}

{% if isAdmin is not defined %}
    {% set isAdmin = false %}
{% endif %}

{% if personnage.items|length > 0 or personnage.materiel %}
    <div class="{{ css }}">
        <div class="header">
            <h5>Vos objets</h5>
        </div>


        <div class="list-group">
            {% for item in personnage.items %}
                <div class="list-group-item  d-flex justify-content-between">
                    <div class="list-group-item-text"><strong>{{ item.numero }}</strong> - {{ item.label }}
                    </div>
                </div>
            {% endfor %}

            {% if personnage.materiel %}
                <div class="list-group-item  d-flex justify-content-between">
                    <div class="list-group-item-text">{{ personnage.materiel }}</div>
                </div>
            {% endif %}
        </div>

    </div>
{% endif %}
