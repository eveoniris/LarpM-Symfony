{% if css is not defined %}
    {% set css = 'well' %}
{% endif %}

<div class="{{ css }}">
    <div class="header">
        <h5>Groupes secondaires</h5>
    </div>

    <ul class="list-group">
        {% for groupeSecondaire in personnage.secondaryGroups %}
            {#  todo if secret and not chief or admin ? #}
            <li class="list-group-item">
                {% if groupeSecondaire.secret %}
                    <i class="fa fa-user-secret text-warning" data-toggle="tooltip" data-placement="top"
                       title="Secret"></i> -
                {% endif %}
                {{ groupeSecondaire.label }}
                <div class="badge">(Chef)</div>
            </li>
        {% endfor %}
        {% for membre in personnage.membres %}
            {% if membre.secondaryGroup.personnage.id != membre.personnage.id %}
                <a class="list-group-item"
                   href="{{ path('groupeSecondaire.admin.detail', {'groupeSecondaire': membre.secondaryGroup.id}) }}">
                    {% if membre.secondaryGroup.secret %}
                        <i class="fa fa-user-secret text-warning" data-toggle="tooltip" data-placement="top"
                           title="Secret"></i> -
                    {% endif %}
                    {{ membre.secondaryGroup.label }}
                </a>
            {% endif %}
        {% endfor %}
        {% if personnage.secondaryGroups|length <= 0 and personnage.membres|length <= 0 %}
            <li class="list-group-item">Ce personnage ne fait pas partie d'un groupe secondaire.</li>
        {% endif %}
    </ul>

    {% if personnage.postulants|length > 0 %}
        <h6>Postulation(s)</h6>
        <ul class="list-group">
            {% for postulant in personnage.postulants %}
                <a class="list-group-item"
                   href="{{ path('groupeSecondaire.admin.detail', {'groupeSecondaire': postulant.secondaryGroup.id}) }}">{{ postulant.secondaryGroup.label }}
                    en attente de validation.</a>
            {% endfor %}
        </ul>
    {% endif %}
</div>
