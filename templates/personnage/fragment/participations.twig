{% if css is not defined %}
    {% set css = 'well' %}
{% endif %}

<div class="{{ css }}">
    <div class="header">
        <h5>Historique des participations</h5>
    </div>
    <div class="list-group">
        {% if personnage.user %}
            {% include 'participant/fragment/participations.twig' with {'participants' : personnage.participants, 'showUser':true} %}
        {% else %}
            <div class="list-group-item">Ce personnage ne fait pas partie d'un groupe.</div>
        {% endif %}
    </div>
</div>
