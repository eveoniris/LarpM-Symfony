{% if personnage.connaissances|length > 0 %}
	<div class="header">
		<h5>Vos connaissances</h5>
	</div>
	<div class="row">
		<div class="col-sm-12">
			<div class="list-group">
			{% for connaissance in personnage.connaissances %}
				<div class="list-group-item">
					<div class="list-group-item-heading">{% if connaissance.secret %}<span style="color:red;">Secret</span> - {% endif %}<strong>{{ connaissance.label }}</strong></div>
					<div class="list-group-item-text">{{ connaissance.description|markdown }}</div>
					<p class="list-group-item-text">
						{% if connaissance.documentUrl %}
							<a class="btn btn-default btn-sm" href="{{ path('participant.connaissance.detail',{'participant': participant.id, 'connaissance' : connaissance.id}) }}">
								<i class="fa fa-file"></i> Imprimer l'aide de jeu
							</a>
						{% endif %}
					</p>
				</div>
			{% endfor %}
			</div>
		</div>
	</div>	
{% endif %}