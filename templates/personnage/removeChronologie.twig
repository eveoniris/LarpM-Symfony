{% extends "base.html.twig" %}

{% block title %}Personnages{% endblock title %}

{% block body %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('personnage.admin.list') }}">Liste des personnages</a></li>
		<li><a href="{{ path('personnage.admin.detail', {'personnage': personnage.id}) }}">Détail de {{ personnage.publicName }}</a></li>
		<li class="active">Retrait d'un évènement</li>
	</ol>

	<div class="well bs-component">	
		{{ form_start(form, {"attr": {"action": path('personnage.admin.chronologie.delete', {'personnage': personnage.id,'personnageChronologie': personnageChronologie.id}) }}) }}
			<fieldset>
				<legend>Retrait d'un évènement</legend>
				
				Attention, vous vous appretez à retirer l'évènement <b>{{ personnageChronologie.annee }} : {{ personnageChronologie.evenement }}</b> de la chronologie du personnage {{ personnage.publicName }}.
				{{ form(form) }}
			</fieldset>
		{{ form_end(form) }}
	</div>
	
{% endblock body %}