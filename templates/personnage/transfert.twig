{% extends "base.html.twig" %}

{% block title %}{{ personnage.publicName }}{% endblock title %}

{% block body %}

<div class="container-fluid">

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('personnage.admin.list') }}">Liste des personnages</a></li>
		<li><a href="{{ path('personnage.admin.detail', {'personnage':personnage.id}) }}">Détail de {{ personnage.publicName }}</a></li>
		<li class="active">Transfert</li>
	</ol>
	
	<div class="well bs-component">
		{{ form_start(form, {"attr": {"action": path('personnage.admin.transfert',{'personnage':personnage.id}) }}) }}
			<fieldset>
				<legend>Tranfert de #{{ personnage.id }} - {{ personnage.nom }} ({{ personnage.surnom }}) - <small>appartient actuellement à {{ personnage.user }}</small></legend>
						
				
	
				{{ form(form) }}
			</fieldset>
		{{ form_end(form) }}
	</div>
	
</div>

{% endblock body %}