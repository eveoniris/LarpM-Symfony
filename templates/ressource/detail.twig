{% extends "base.html.twig" %}

{% block title %}Ressources{% endblock title %}

{% block body %}

{% include '_partials/breadcrumb.twig' with {'items' : {
	1 : {'route' : path('ressource.index'), 'name' : 'Gestion des ressources'},
	2 : {'name' : ressource.label}
}} 
%}
	
<div class="container-fluid">
	<div class="row">
		<div class="col-xs-12 col-md-8">
			

						
			<div class="list-group">
				<div class="list-group-item">
			    	<h4 class="list-group-item-heading">Description</h4>
			    	<p class="list-group-item-text">
			 			{{ ressource.label }} ({{ ressource.rarete.value }} - {{ ressource.rarete.label }})
  					</p>
  				</div>
  				
  				<div class="list-group-item">
			    	<h4 class="list-group-item-heading">Importateurs</h4>
			    	<p class="list-group-item-text">
			    		<ul>
			    		{% for territoire in ressource.importateurs %}
			    			<li><a href="{{ path('territoire.detail',{'territoire':territoire.id}) }}">{{ territoire.nom }}</a></li>
			    		{% endfor %}
			    		</ul>
  					</p>
  				</div>
  				
  				<div class="list-group-item">
			    	<h4 class="list-group-item-heading">Exportateurs</h4>
			    	<p class="list-group-item-text">
			 			<ul>
			    		{% for territoire in ressource.exportateurs %}
			    			<li><a href="{{ path('territoire.detail',{'territoire':territoire.id}) }}">{{ territoire.nom }}</a></li>
			    		{% endfor %}
			    		</ul>
  					</p>
  				</div>

  				<div class="list-group-item">
  					<div class="btn-group" role="group" aria-label="...">
  						<a  class="btn btn-primary" role="button" href="{{ path('ressource.update', {'ressource' : ressource.id}) }}">Modifier</a>
					</div>
  				</div>
			</div>	
					
		</div>
	</div>
</div>
	
			
{% endblock %}