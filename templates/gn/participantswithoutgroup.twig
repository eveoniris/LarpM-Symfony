{% extends "base.html.twig" %}

{% block title %}Grandeur nature{% endblock title %}

{% block body %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path("gn.list") }}">Liste des grandeur nature</a></li>
		<li><a href="{{ path('gn.detail', {'gn':gn.id}) }}">{{ gn.label }}</a></li>
		<li class="active">Liste des participants avec un billet mais n'étant pas dans un groupe</li>
	</ol>

	<div class="well well-sm bs-component">

		<div class="header">
			<h5>Liste des participants à {{ gn.label }} avec un billet mais n'étant pas dans un groupe</h5>
		</div>

		<div class="btn-toolbar" role="toolbar" aria-label="...">
			<div class="btn-group" role="group" aria-label="...">
				<a class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Export CSV" href="{{  path('gn.participants.withoutgroup.csv', {'gn': gn.id}) }}"><i class="fa fa-file-csv"></i> Export CSV</a>
			</div>
		</div>
	</div>

	<table class="table table-condensed table-striped table-bordered">
		<thead>
			<tr>
				<th>Participant</th>
				<th>Email</th>
				<th>Billet</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			{% for participant in participants %}
				<tr>
					<td>
						{% if participant.user.etatCivil %}
							{{ participant.user.etatCivil.nom }} {{ participant.user.etatCivil.prenom }}
						{% else %}
							Ce joueur n'a pas encore rempli son état-civil
						{% endif %}
					</td>
					<td>{{ participant.user.email }}</td>
					<td>{{ participant.billet }}</td>
					<td>
						<div class="btn-toolbar pull-right" role="toolbar" aria-label="...">
							<div class="btn-group" role="group" aria-label="...">
								<a class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Ajouter à un groupe" href="{{ path('participant.groupe',{'participant':participant.id}) }}"><i class="fa fa-users"></i></a>
							</div>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>	

{% endblock body %}
