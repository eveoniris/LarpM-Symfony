{% extends "base.html.twig" %}

{% block title %}Grandeur nature{% endblock title %}

{% block body %}
	{# display navigation #}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li class="active">Liste des grandeurs nature</li>
	</ol>

	<div class="well well-sm">

		<div class="header">
			<h5>Liste des grandeurs nature</h5>
		</div>
		<div class="btn-toolbar" role="toolbar" aria-label="...">
			<div class="btn-group" role="group" aria-label="...">
				<a class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Ajouter un GN" href="{{ path('gn.add') }}"><i class="fa fa-plus"></i> Ajouter</a>
			</div>
		</div>

	</div>
		{% include '_partials/pagination.html.twig' %}

		<table class="table table-striped table-bordered table-condensed table-hover">
			<thead>
				<tr>
					<th>
						{% if app.request.get('order_dir') == 'ASC' and app.request.get('order_by') == 'id' %}
							<a href="{{ path('gn.list', {'order_by': 'id', 'order_dir': 'DESC'}) }}">
						{%  else %}
							<a href="{{ path('gn.list', {'order_by': 'id', 'order_dir': 'ASC'}) }}">
						{% endif %}
							#	
						{% if app.request.get('order_by') == 'id'  %}
							{% if app.request.get('order_dir') == 'ASC' %}
								<span class="caret"></span>
							{%else%}
									<span class="dropup">
    									<span class="caret"></span>
									</span>
								{% endif %}
						{% endif %}
						</a>
					</th>
					<th>
						{% if app.request.get('order_dir') == 'ASC' and app.request.get('order_by') == 'label' %}
							<a href="{{ path('gn.list', {'order_by': 'label', 'order_dir': 'DESC'}) }}">
						{%  else %}
							<a href="{{ path('gn.list', {'order_by': 'label', 'order_dir': 'ASC'}) }}">
						{% endif %}
							Titre
						{% if app.request.get('order_by') == 'label'  %}
							{% if app.request.get('order_dir') == 'ASC' %}
								<span class="caret"></span>
							{%else%}
									<span class="dropup">
    									<span class="caret"></span>
									</span>
								{% endif %}
						{% endif %}
						</a> 
					</th>
					<th>Etat</th>
					<th>Nombre de participants</th>
					<th>Nombre de billets vendu</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for gn in paginator %}
					<tr>
						<td>{{ gn.id }}</td>
						<td>{{ gn.label }}</td>
						<td>{% if gn.actif %}<span class="text-success">Actif</span>{% else %}non actif{% endif %}</td>
						<td>{{ gn.participants|length }}</td>
						<td>{{ gn.billets|length }}</td>
						<td>
							<div class="btn-toolbar pull-right" role="toolbar" aria-label="...">
								<div class="btn-group" role="group" aria-label="...">
									<a class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Modifier" href="{{ path('gn.update',{'gn':gn.id}) }}"><i class="fa fa-pencil"></i></a>
									<a class="btn btn-default" data-toggle="tooltip" data-placement="top" title="DÃ©tail" href="{{ path('gn.detail',{'gn':gn.id}) }}"><i class="fa fa-eye"></i></a>
									<a class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Supprimer" href="{{ path('gn.delete',{'gn':gn.id}) }}"><i class="fa fa-eraser"></i></a>
								</div>
							</div>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		{% include '_partials/pagination.html.twig' %}

	
{% endblock %}
