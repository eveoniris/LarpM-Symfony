{% extends "base.html.twig" %}

{% block title %}Règles{% endblock title %}

{% block body %}

<div class="well">
	
	<div class="row">
		<div class="col-md-6">
			<div class="header"><h5>Ajouter un fichier de règle</h5></div>
			
			<blockquote>Choisissez votre fichier pdf et téléversez le dans larpManager. Vous devez spécifier son label ainsi qu'une petite description.</blockquote>
			
			{{ form_start(form, {"attr": {"action": path('rules') }}) }}			
					
					{{ form(form) }}
					{{ form_rest(form) }}
			{{ form_end(form) }}
		</div>
		<div class="col-md-6">
	
			<div class="header"><h5>Liste des règles</h5></div>
			
			<blockquote>Les fichiers suivants sont disponibles pour tous les joueurs</blockquote>
			
			<div class="list-group">
				{% for regle in regles %}
						<div class="list-group-item">
							<h5 class="list-group-item-heading">{{ regle.label }}
								<div class="pull-right">
									<small><a target="_blank" href="{{ path('rule.document',{'rule': regle.id}) }}"><i class="fa fa-download"></i> Téléchargez le fichier</a></small>
								</div>
							</h5>
							<p class="list-group-item-text">{{ regle.description|markdown_to_html }}</p>
							<p class="list-group-item-text"><a href="{{ path('rule.delete',{'rule': regle.id}) }}"><i class="fa fa-remove"></i> Supprimer le fichier</a></p>
						</div>
				{% endfor %}
			</div>
		</div>
	</div>
</div>

{% endblock body %}
