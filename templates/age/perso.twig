{% extends "layout.twig" %}

{% block title %}Age{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('age') }}">Liste des ages</a></li>
		<li class="active">Personnages ayant cet age</li>
	</ol>

<div class="container-fluid">
	<div class="row">
		<div class="col-xs-12 col-md-12">
				<div class="well well-sm">
				<h4>
					{{ age.label }}
					<small>
						( {{ age.personnages|length }} personnages )
					</small>
				</h4>
			</div>

			<div class="list-group">
				{% for personnage in age.personnages %}
					<a class="list-group-item" href="{{ path('personnage.admin.detail',{'personnage':personnage.id}) }}">{% if personnage.vivant == 0 %}ğŸ’€ {% endif %}#{{ personnage.id }} - {{ personnage.identity }} -- {{ personnage.classeName }}</a>
				{% endfor %}
			</div>
		</div>
	</div>
</div>
	
{% endblock %}