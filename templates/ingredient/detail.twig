{% extends "base.html.twig" %}

{% block title %}Ingredients{% endblock title %}

{% block body %}

{% include '_partials/breadcrumb.twig' with {'items' : {
	1 : {'route' : path('ingredient.list'), 'name' : 'Liste des ingredients'},
	2 : {'name' : ingredient.label}
}} 
%}

	<div class="list-group">
		<div class="list-group-item">
			<div class="list-group-item-heading"><h6>Label</h6></div>
			<div class="list-group-item-text">{{ ingredient.label }}</div>
		</div>
		<div class="list-group-item">
			<div class="list-group-item-heading"><h6>Niveau</h6></div>
			<div class="list-group-item-text">{{ ingredient.niveau }}</div>
		</div>
		<div class="list-group-item">
			<div class="list-group-item-heading"><h6>Couleur</h6></div>
			<div class="list-group-item-text">{{ ingredient.color }}</div>
		</div>		
		<div class="list-group-item">
			<div class="list-group-item-heading"><h6>Dose</h6></div>
			<div class="list-group-item-text">{{ ingredient.dose }}</div>
		</div>
		<div class="list-group-item">
			<div class="list-group-item-heading"><h6>Description</h6></div>
			<div class="list-group-item-text">
				{% if ingredient.description %}
					{{ ingredient.description|markdown_to_html }}
				{% else %}
					Aucune description
				{% endif %}
			</div>
		</div>
	</div>
			
{% endblock body %}
