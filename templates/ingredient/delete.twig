		<li><a href="{{ path('ingredient.admin.list') }}">Liste des titres</a></li>
		<li class="active">Supprimer un ingredient</li>
	</ol>
	
	
	<div class="well bs-component">
		{{ form_start(form, {"attr": {"action": path('ingredient.admin.delete', {'ingredient': ingredient.id}) }}) }}
