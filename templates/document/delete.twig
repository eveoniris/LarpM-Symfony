{% extends "base.html.twig" %}

{% block title %}Documents{% endblock title %}

{% block body %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('document') }}">Liste des documents</a></li>
		<li class="active">Suppression d'un document</li>
	</ol>
	
	<div class="well bs-component">
		{{ form_start(form, {"attr": {"action": path('document.delete', {'document':document.id}) }}) }}
			<fieldset>
				<legend>Suppression d'un document</legend>
				{{ document.code }} -- {{ document.titre }}
				
				{{ form(form) }}
			</fieldset>
		{{ form_end(form) }}
	</div>
	
{% endblock %}