<ul class="list-group">

	{%  for appelation in appelations %}
	{%  set step = appelation.stepCount %}
	<li class="list-group-item"{% if step > 0 %} style="padding-left: {{ step * 50 }}px"{% endif %}>
		<h4 class="list-group-item-heading">
			{{ appelation.label }} 
			<div class="btn-toolbar pull-right" role="toolbar" aria-label="...">
				<div class="btn-group" role="group" aria-label="...">
					<a class="btn btn-secondary" title="DÃ©tail" href="{{ path('appelation.detail', {'appelation':appelation.id}) }}"><i class="fa fa-eye"></i></a>
					<a class="btn btn-secondary" title="Modifier" href="{{ path('appelation.update', {'appelation':appelation.id}) }}"><i class="fa fa-pencil"></i></a>
				</div>
			</div>
		</h4>
		<p class="list-group-item-text">		
			{% if appelation.description %}
				<p class="text-default">{{ appelation.description }}</p>
			{% else %}
				<p class="text-warning">Attention, cette appelation n'a pas de description</p>
			{%  endif %}
		</p>
		<p class="list-group-item-text">
			{{ appelation.appelations|join(', ') }}
		</p>
	</li>
	{%  endfor %}
</ul>