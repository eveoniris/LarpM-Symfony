{% extends "layout.twig" %}

{% block title %}Prieres{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('magie.priere.list') }}">Liste des prieres</a></li>
		<li class="active">Supprimer une priere</li>
	</ol>
	
	
	<div class="well bs-component">
		<form action="{{ path('magie.priere.delete', {'priere': priere.id}) }}" method="POST" {{ form_enctype(form) }} novalidate>
			<fieldset>
				<legend>Supression d'une priere</legend>
					{{ priere.label }} - Niveau {{ priere.niveau }}
					{{ priere.description|markdown }}
					{% form_theme form 'Form/bootstrap_3_layout.html.twig' %}
					{{ form(form) }}
			</fieldset>
		</form>
	</div>
				
{% endblock content %}