{% extends "base.html.twig" %}

{% block title %}Prieres{% endblock title %}

{% block body %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('magie.priere.list') }}">Liste des prieres</a></li>
		<li class="active">Supprimer une priere</li>
	</ol>
	
	
	<div class="well bs-component">
		{{ form_start(form, {"attr": {"action": path('magie.priere.delete', {'priere': priere.id}) }}) }}
			<fieldset>
				<legend>Supression d'une priere</legend>
					{{ priere.label }} - Niveau {{ priere.niveau }}
					{{ priere.description|markdown_to_html }}
					
					{{ form(form) }}
			</fieldset>
		{{ form_end(form) }}
	</div>
				
{% endblock body %}
