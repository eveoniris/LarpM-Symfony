{% extends "base.html.twig" %}

{% block title %}Culture{% endblock title %}

{% block body %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('culture.index') }}">Liste des cultures</a></li>
		<li class="active">Supprimer une culture</li>
	</ol>
	
	
	<div class="well bs-component">
		{{ form_start(form, {"attr": {"action": path('culture.delete', {'culture': culture.id}) }}) }}
			<fieldset>
				<legend>Supression d'une culture</legend>
					{{ culture.label }}
					{{ culture.description|markdown_to_html }}
					
					{{ form(form) }}
			</fieldset>
		{{ form_end(form) }}
	</div>
				
{% endblock body %}
