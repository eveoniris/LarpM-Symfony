{% extends "layout.twig" %}

{% block title %}Stratégie{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li class="active">Stratégie</li>
	</ol>

	<nav class="navbar navbar-default" style="padding-right: 5px;">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2" aria-expanded="false">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
			</button>
			<span class="navbar-brand">
			</span>
		</div>
		<div id="bs-example-navbar-collapse-2" class="collapse navbar-collapse">
			<ul class="nav navbar-nav navbar-right">
				<a href="{{ path('strategie.csv') }}" class="btn btn-primary navbar-btn">Fichier CSV</a>
			</ul>
		</div>
	</nav>
	
	<div class="well well-sm">
		<div class="alert alert-info">
			Ces informations correspondent aux groupes participant au prochain jeu <strong>{{ gn.label }}</strong>.
		</div>
			
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Nom</th>
					<th>Territoire</th>
					<th>Groupe</th>
					<th>Défense</th>
					<th>Espion(s)</th>
					<th>Navire(s)</th>
					<th>Constructions</th>
			</thead>
			<tbody>
		{% for territoire in territoires %}
			<tr>
				<th>{{ territoire.nom }}</th>
				<td>{{ territoire.root }}</td>
				<td>
					{% if territoire.groupe %}
						<a href="{{ path('groupe.detail', {'index':territoire.groupe.id}) }}">{{ territoire.groupe.nom }}</a>
					{% else %}
						Aucun groupe ne contrôle ce territoire
					{% endif %}
				</td>
				<td>{{ territoire.defense }}</td>
				<td>En cours de developpement</td>
				<td>En cours de developpement</td>
				<td>{{ territoire.constructions|join(', ') }}</td>
			</tr>
		{% endfor %}
			</tbody>
		</table>
	</div>
	
{% endblock content %}