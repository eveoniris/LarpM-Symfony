{% extends "layout_print.twig" %}

{% block style %}
<style>
table {
    border-collapse: collapse;
}

table td {
	border : 1px solid #000;
}
</style>
{% endblock style %}

{% block content %}

<table>

{% for item in items  %}
	<tr>
		<td>{{ item.couleur }}</td>
		<td>{{ item.numero }}</td>
		<td>{{ item.quality.numero }}{{ item.identification }}</td>
		<td>{{ item.label }}</td>
		<td><img src="{{ path('stock_objet_photo',{'objet': item.objet.id, 'miniature': true}) }}" alt="{{ item.label }}" /></td>
		<td>{{ item.special|markdown }}</td>
		<td>
			{% for groupe in item.groupes %}
				#{{groupe.id}} {{ groupe }},&nbsp;
			{% endfor %}
    	</td>
		<td>
			{% for personnage in item.personnages %}
				{% set groupe = personnage.getGroupeByLabel('LH3') %}
				#{{personnage.id }} {{ personnage }} [{% if groupe %}#{{ groupe.id }} {{ groupe.nom }}{% else %}pas de groupe {% endif %}],&nbsp;
			{% endfor %}
		</td>
		<td>
			{% set objet = item.objet %}
			{% if objet %}
				{% if objet.rangement %}
					{{ objet.rangement.adresse }}
				{% else %}
					Pas lié à un rangement
				{% endif %}
			{% else %}
				Pas lié à un objet du stock
			{% endif %}
		</td>
	</tr>
{% endfor %}

</table>

{% endblock content %}
 