{% extends "layout_print.twig" %}

{% block style %}
<style>

div.content
{
font-size: 0;
}
.item
{
	color: #000;
	font-weight: bold;
	width : 400px;
	padding : 5px 5px 5px 5px; 
	border: 1px solid #000;
	display: inline-block;
	margin:0px;
	font-size: 10px;
	height:80px;
}

.item-bleu
{
	background-color: DodgerBlue;
}
.item-orange
{
	background-color: orange;
}

.item-header
{
}
.item-text
{
	text-align: center;
}
.pull-right {
  float: right !important;
}

.recto {
	display: inline-block;
	border-right: 1px dashed #000;
	width: 190px;
	padding-right : 10px;
}
.verso {
	display: inline-block;
	width: 190px;
}

img {
	display: block;
    margin-left: auto;
    margin-right: auto;
}

table {
	border-collapse: collapse;
	border: 0px;
}
table td {
	vertical-align : top;
	width : 200px;
	padding-right: 10px;
	padding-left: 10px;
	border : 0px;
}
p {
margin-top : 0px;
margin-bottom: 0px;
}
span {
margin: 0px;
}

</style>
{% endblock style %}

{% block content %}
	<h6>BLEU</h6>
	{% for item in items if item.couleur == 'bleu' %}
		{% for i in 1..item.quantite %}
			<div class="item {% if item.couleur == 'bleu' %}item-bleu{% else %}item-orange{% endif %}">
				<table>
					<tr>
						<td>
							
								<div class="item-header">
									<bold>{{ item.numero }}</bold>
									<span class="pull-right"><bold>{{ item.quality.numero }}{{ item.identification }}</bold></span>
								</div>
								<div class="item-text">
									{{ item.label }}
								</div>
							
						</td>
						<td>
							
								{{ item.description|markdown }}
							
						</td>
					</tr>
				</table>
				
				
			</div>
		{% endfor %}
	{% endfor %}
	
	<div class="print-page-break"></div>
	<h6>ORANGE</h6>
	{% for item in items if item.couleur != 'bleu' %}
		{% for i in 1..item.quantite %}
			<div class="item {% if item.couleur == 'bleu' %}item-bleu{% else %}item-orange{% endif %}">
				<table>
					<tr>
						<td>
							
								<div class="item-header">
									<bold>{{ item.numero }}</bold>
									<span class="pull-right"><bold>{{ item.quality.numero }}{{ item.identification }}</bold></span>
								</div>
								<div class="item-text">
									{{ item.objet.nom }}
								</div>
							
						</td>
						<td>
							
								{{ item.description|markdown }}
							
						</td>
					</tr>
				</table>
				
				
			</div>
		{% endfor %}
	{% endfor %}
{% endblock %}