{% extends "layout.twig" %}

{% block title %}Appelation{% endblock title %}

{% block content %}

<div class="container-fluid">
	<div class="row">
		<div class="col-xs-12 col-md-8">
		
			<div class="well well-sm bs-component">
				<h4>
					{{ appelation.label }}
				</h4>
			</div>
		
  			<div class="list-group">
		    		
		    	<div class="list-group-item">
			    	<h4 class="list-group-item-heading">Description</h4>
	    			<p class="list-group-item-text">
	    			{% if not appelation.description %}
    				<span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
    				Attention, cette appelation n'a pas de description.
    				{% else %}
    					{{ appelation.description }}
    				{% endif %}
    				</p>
	    		</div>
	    			
	    		<div class="list-group-item">
		    		<h4 class="list-group-item-heading">Liste des appelations rattachées à cette appelation ({{ appelation.appelations|length }} appelation)</h4>
    				<p class="list-group-item-text">
						<ul>
						{% for appelation in appelation.appelations %}
							<li><a href="{{ path('appelation.detail',{'appelation': appelation.id}) }}">{{ appelation.labelTree }}</a></li>
						{% endfor %}
						</ul>
					</p>
				</div>
				
				<div class="list-group-item">
  					<div class="btn-group" role="group" aria-label="...">
  						<a  class="btn btn-primary" role="button" href="{{ path('appelation.update', {'appelation' : appelation.id}) }}">Modifier</a>
					</div>
  				</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}