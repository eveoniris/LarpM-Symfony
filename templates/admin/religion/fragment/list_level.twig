<ul class="list-group">
	{%  if add != false %}
		<a href="{{ path('religion.level.add') }}" class="list-group-item active">
			<span class="badge"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></span>
			<h4 class="list-group-item-heading">Ajouter un niveau de religion</h4>
		</a>
	{%  endif %}
	{%  for religionLevel in religionLevels %}
	<li class="list-group-item">
		<h4 class="list-group-item-heading">
			{{ religionLevel.label }} 
			<div class="btn-group pull-right" role="group" aria-label="...">
				<a href="{{ path('religion.level.detail', {index: religionLevel.id}) }}" class="btn btn-primary" role="button">DÃ©tail</a>
			    <a href="{{ path('religion.level.update', {index: religionLevel.id}) }}" class="btn btn-default" role="button">Modifier</a>
			</div>
		</h4>
		<p class="list-group-item-text">		
			{% if religionLevel.description %}
				<p class="text-default">{{ religionLevel.description|slice(0,500) }} ...</p>
			{% else %}
				<p class="text-warning">Attention, ce niveau de religion n'a pas de description</p>
			{%  endif %}
		</p>
	</li>
	{%  endfor %}
</ul>