{% extends "layout.twig" %}

{% block title %}Documents{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('document') }}">Liste des documents</a></li>
		<li class="active">Suppression d'un document</li>
	</ol>
	
	<div class="well bs-component">
		<form action="{{ path('document.delete', {'document':document.id}) }}" method="POST" {{ form_enctype(form) }}>
			<fieldset>
				<legend>Suppression d'un document</legend>
				{{ document.code }} -- {{ document.titre }}
				{% form_theme form 'Form/bootstrap_3_layout.html.twig' %}
				{{ form(form) }}
			</fieldset>
		</form>
	</div>
	
{% endblock %}