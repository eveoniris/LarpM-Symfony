{% extends "base.html.twig" %}

{% block title %}Loi{% endblock title %}

{% block body %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('loi.index') }}">Liste des lois</a></li>
		<li class="active">Supprimer une loi</li>
	</ol>
	
	
	<div class="well bs-component">
		{{ form_start(form, {"attr": {"action": path('loi.delete', {'loi': loi.id}) }}) }}
			<fieldset>
				<legend>Supression d'une loi</legend>
					{{ loi.label }}
					{{ loi.description|markdown_to_html }}
					
					{{ form(form) }}
			</fieldset>
		{{ form_end(form) }}
	</div>
				
{% endblock body %}
