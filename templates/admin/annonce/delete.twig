{% extends "layout.twig" %}

{% block title %}Annonces{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path("annonce.list") }}">Liste des annonces</a></li>
		<li class="active">Suppression d'une annonce</li>
	</ol>
	
	<div class="well well-sm">
		<form action="{{ path('annonce.delete', {'annonce': annonce.id}) }}" method="POST" {{ form_enctype(form) }}>
			<fieldset>
				<legend>Supprimer {{ annonce.title }}</legend>
					{{ annonce.text|markdown }}
					{% form_theme form 'Form/bootstrap_3_layout.html.twig' %}
					{{ form(form) }}
			</fieldset>
		</form>
	</div>	
{% endblock content %}