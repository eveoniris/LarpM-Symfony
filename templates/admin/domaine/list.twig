{% extends "layout.twig" %}

{% block title %}Domaine de magie{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li class="active">Liste des domaines de magie</li>
	</ol>
	
	<div class="well well-sm">
	
		<a href="{{ path('magie.domaine.add') }}"><i class="fa fa-plus"></i> Ajouter un domaine de magie</a>
		
		<ul class="list-group">
		{% for domaine in domaines %}
		
			<li class="list-group-item">
				<div class="row">
					<div class="col-md-8">
						{{ domaine.label }}
						{{ domaine.description|markdown }}
						
					</div>
					<div class="col-md-4">
						<a href="{{ path('magie.domaine.update',{'domaine':domaine.id}) }}"><i class="fa fa-pencil"></i> Modifier</a>&nbsp;|&nbsp;
						<a href="{{ path('magie.domaine.detail',{'domaine':domaine.id}) }}"><i class="fa fa-eye"></i> Detail</a>&nbsp;|&nbsp;
						<a href="{{ path('magie.domaine.delete',{'domaine':domaine.id}) }}"><i class="fa fa-eraser"></i> Supprimer</a>
					</div>
				</div>
		    </li>

		{% endfor %}
	 	</ul>
	</div>
	
{% endblock %}