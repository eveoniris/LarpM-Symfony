{% extends "layout.twig" %}

{% block title %}Restrictions alimentaires{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('restriction.list') }}">Liste des restrictions alimentaires</a></li>
		<li class="active">Suppression d'une restriction alimentaire</li>
	</ol>
	
	<div class="well well-sm">
		<form action="{{ path('restriction.delete', {'restriction': restriction.id}) }}" method="POST" {{ form_enctype(form) }}>
			<fieldset>
				<legend>Suppression d'une restriction alimentaire -- {{ restriction.label }}</legend>
				{% form_theme form 'Form/bootstrap_3_layout.html.twig' %}
	
				{{ form(form) }}
			</fieldset>
		</form>
	</div>
	
{% endblock %}