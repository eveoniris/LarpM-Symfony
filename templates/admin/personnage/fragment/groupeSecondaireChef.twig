{# Groupes secondaires #}
{% if personnage.secondaryGroups|length >0  %}
<div class="header">
	<h5>Chef de groupe secondaire</h5>
</div>

<ul class="list-group">
	{% for groupeSecondaire in personnage.secondaryGroups %}
		<a class="list-group-item" href="{{ path('participant.groupeSecondaire.detail', {'participant': participant.id, 'groupeSecondaire':groupeSecondaire.id}) }}">{% if groupeSecondaire.secret %}<span style="color:red;">Secret</span> - {% endif %}{{ groupeSecondaire.label }}</a>
	{% endfor %}
</ul>
{% endif %}