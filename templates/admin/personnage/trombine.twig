{% extends "layout.twig" %}

{% block title %}Personnages{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('personnage.admin.list') }}">Liste des personnages</a></li>
		<li><a href="{{ path('personnage.admin.detail', {'personnage': personnage.id}) }}">DÃ©tail de {{ personnage.publicName }}</a></li>
		<li class="active">Modification de la photo</li>
	</ol>
	
	
	<div class="well well-sm">	
	
		<div class="header"><h5>Photo actuelle</h5></div>

		{% if personnage.trombineUrl %}		
			<img width="160" src="{{ path('personnage.trombine', {'personnage' : personnage.id }) }}" />
		{% else %}
			<img width="160" src="{{ app.request.basepath }}/img/no_trombine.png" />
		{% endif %}
		
		<div class="header"><h5>Modifier</h5></div>
		
		<form action="{{ path('personnage.trombine.update', {'personnage': personnage.id}) }}" method="POST" {{ form_enctype(form) }}>
			<fieldset>
				<legend>Modification de la photo</legend>
				{% form_theme form 'Form/bootstrap_3_layout.html.twig' %}
				{{ form(form) }}
			</fieldset>
		</form>
	</div>
	
{% endblock content %}