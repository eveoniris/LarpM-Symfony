{% set formPath = formPath is defined ? formPath : 'personnage.admin.list' %}
{% set formParams = formParams is defined ? formParams : {} %}
{% set displayAdminToolbar = displayAdminToolbar is defined ? displayAdminToolbar : true %}
{% set displaySearchFilter = displaySearchFilter is defined ? displaySearchFilter : true %}

{% block body %}

	<div class="well well-sm">

		<div class="header">
			<h5>Liste des personnages <small>( {{ paginator|length }} personnages )</small></h5>
		</div>

{% if displayAdminToolbar %}
		<div class="btn-toolbar" role="toolbar" aria-label="...">
			<div class="btn-group" role="group" aria-label="...">
				<a class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Ajouter un personnage" href="{{ path('personnage.admin.add') }}"><i class="fa fa-plus"></i> Ajouter</a>
				<!-- à remettre quand la fonctionnalité sera implémentée <a class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Imprimer la liste" href="{{ path('personnage.admin.add') }}"><i class="fa fa-print"></i></a> -->
				<!-- à remettre quand la fonctionnalité sera implémentée <a class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Télécharger la liste (CSV)" href="{{ path('personnage.admin.add') }}"><i class="fa fa-download"></i></a> -->
			</div>
		</div>
{% endif %}

{% if displaySearchFilter %}
		<ul class="list-group">
            <li class="list-group-item">
                <div class="btn-toolbar" role="toolbar" aria-label="...">
					{{ form_start(form, {"action": path(formPath, formParams)}) }}

					<div class="form-group">
						<div class="input-group">
							{{ form_widget(form.value) }}
							{{ form_widget(form.type) }}
							{{ form_widget(form.religion) }}
							{{ form_widget(form.competence) }}
							{{ form_widget(form.classe) }}
							{{ form_widget(form.groupe) }}
							<div class="input-group-btn">
								<button type="submit" class="btn btn-default" data-toggle="tooltup" data-placement="top" title="Lancer la recherche"><i class="fa fa-search"></i></button>
								<a class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Reset" href="{{ path(formPath, formParams) }}"><i class="fa fa-refresh"></i></a>
							</div>
						</div>
					</div>

					{{ form_end(form) }}

                </div>
            </li>
        </ul>
{% endif %}

		<div class="paginator-container">
			<div class="legend"><span class="legend-header">Légende Statut : </span>{{ iconPjConfirmed | raw }} = PJ Actif, {{ iconPnj | raw }} = PNJ, {{ iconPjOld | raw }} = PJ Non actif, {{ iconPjDead | raw }} = Mort</div>
		</div>
	</div>

{% include '_partials/pagination.html.twig' %}


			
			
{% endblock body %}