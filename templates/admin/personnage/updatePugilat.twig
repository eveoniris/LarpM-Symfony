{% extends "base.html.twig" %}

{% block title %}Personnage{% endblock title %}

{% block body %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('personnage.admin.list') }}">Liste des personnages</a></li>
		<li class="active">Modification de {{ personnage.publicName }}</li>
	</ol>

	<div class="well bs-component">	
		{{ form_start(form, {"attr": {"action": path('personnage.admin.update.pugilat', {'personnage': personnage.id}) }}) }}
			<fieldset>
				<legend>Modification de {{ personnage.publicName }}</legend>
				<p><strong>Ce personnage a {{ personnage.pugilat|default(0) }} points de Pugilat.</strong></p>
				
	
				{{ form(form) }}
			</fieldset>
		{{ form_end(form) }}
	</div>
	
{% endblock body %}