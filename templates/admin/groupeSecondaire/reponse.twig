{% block body %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path("groupeSecondaire.admin.list") }}">Liste des groupes secondaires</a></li>
		<li><a href="{{ path("groupeSecondaire.admin.detail",{'groupeSecondaire':groupeSecondaire.id}) }}">DÃ©tail de {{ groupeSecondaire.label }}</a></li>
		<li class="active">Accepter ou refuser une candidature</li>
	</ol>
	
	<div class="well bs-component">
		
		{{ form_start(form, {"attr": {"action": path('groupeSecondaire.admin.reponse', {'index': groupeSecondaire.id, 'postulantId': postulant.id}) }}) }}
			<fieldset>
				<legend>Accepter ou refuser la candidature de {{ postulant.personnage.publicidentity }}</legend>
