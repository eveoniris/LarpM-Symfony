{% extends "layout.twig" %}

{% block title %}Prieres{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('magie.priere.list') }}">Liste des prieres</a></li>
		<li class="active">Modifier une priere</li>
	</ol>
	
	
	<div class="well bs-component">
		<form action="{{ path('magie.priere.update', {'priere': priere.id}) }}" method="POST" {{ form_enctype(form) }} novalidate>
			<fieldset>
				<legend>Modification d'une priere</legend>
					{% form_theme form 'Form/bootstrap_3_layout.html.twig' %}
					{{ form(form) }}
			</fieldset>
		</form>
	</div>
				
{% endblock content %}