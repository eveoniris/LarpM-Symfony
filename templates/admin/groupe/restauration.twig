{% extends "layout.twig" %}

{% block title %}Groupes{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path("groupe.admin.list") }}">Liste des groupes</a></li>
		<li><a href="{{ path("groupe.detail", {'index': groupe.id}) }}">{{ groupe.nom }}</a></li>
		<li class="active">Restauration</li>
	</ol>
	
	<div class="well well-sm">
		<form action="{{ path('groupe.restauration',{'groupe': groupe.id}) }}" method="POST">
			<div class="form-group">
				<p>Choisissez les lieux de restauration pour chacun des membres du groupe</p>
			</div>
			{% form_theme form 'Form/bootstrap_3_layout.html.twig' %}
			{{ form(form) }}
			
		</form>
	</div>
{% endblock %}