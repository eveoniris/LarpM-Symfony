{% extends "layout.twig" %}

{% block title %}Ages{% endblock title %}

{% block content %}

	<div class="container-fluid">
		<div class="row">
			<div class="col-xs-12 col-md-8">
				<a href="{{ path("age") }}">Retour Ã  la liste des ages</a>
				{{ include("admin/age/fragment/form.twig",{
					'legend': 'Modification d\'un age',
					'action': path('age.update.post',{'age':age.id}),
					'form' : form}) }}
			</div>
		</div>
	</div>
	
	<div class="modal fade" id="confirm-submit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	    <div class="modal-dialog">
	        <div class="modal-content">
	            <div class="modal-header">
	                <h6>Confirmer la suppression</h6>
	            </div>
	            <div class="modal-body">
	            	<p>Etes-vous certain de vouloir supprimer l'age suivant :</p>
	            	{{ age.label }}
	            	{{ age.description }}
	            </div>
	            <div class="modal-footer">
	            	<button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
	            	<a href="#" id="submit" class="btn btn-success success">Supprimer</a>
	            </div>
	        </div>
	    </div>
	</div>
	
{% endblock content %}

{% block javascript %}

	{{ parent() }}
	
	<script type="text/javascript">
	
		$(document).ready(function() {
	
			$('#submit').click(function(){
			    $('form').submit();
			});	
		});
	</script>
{% endblock javascript %}