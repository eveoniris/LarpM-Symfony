{% extends "layout.twig" %}

{% block title %}Personnages secondaires{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('personnageSecondaire') }}">Liste des personnages secondaires</a></li>
		<li class="active">Supression du personnage secondaire</li>
	</ol>

	<div class="well bs-component">	
		<form action="{{ path('personnageSecondaire.delete', {'personnageSecondaire': personnageSecondaire.id}) }}" method="POST" {{ form_enctype(form) }}>
			<fieldset>
				<legend>Supression du personnage secondaire {{ personnageSecondaire.classe.label }}</legend>
				{% form_theme form 'Form/bootstrap_3_layout.html.twig' %}
				<p class="text-danger">
					<span class="fa-stack fa-lg">
						<i class="fa fa-square-o fa-stack-2x"></i>
						<i class="fa fa-exclamation fa-stack-1x"></i>
					</span>
					Attention, vous vous appretez à supprimer définitivement un personnage secondaire</p>
				{{ form(form) }}
			</fieldset>
		</form>
	</div>
	
{% endblock content %}