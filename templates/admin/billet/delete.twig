{% extends "layout.twig" %}

{% block title %}Billets{% endblock title %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ path('homepage') }}">Accueil</a></li>
		<li><a href="{{ path('billet.list') }}">Liste des billets</a></li>
		<li class="active">Suppression d'un billet</li>
	</ol>
	
	<div class="well bs-component">
		<form action="{{ path('billet.delete', {'billet':billet.id}) }}" method="POST" {{ form_enctype(form) }}>
			<fieldset>
				<legend>Suppression d'un billet</legend>
				{{ billet.label }}
				{% form_theme form 'Form/bootstrap_3_layout.html.twig' %}
				{{ form(form) }}
			</fieldset>
		</form>
	</div>
	
{% endblock %}