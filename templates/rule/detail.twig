{% extends "layout.twig" %}

{% block title %}{{ regle.label }}{% endblock title %}

{% block content %}

<ol class="breadcrumb">
	<li><a href="{{ path('homepage')  }}">Accueil</a></li>
	<li><a href="{{ path('gn.detail', {'gn' : participant.gn.id}) }}">{{ participant.gn.label }}</a></li>
	<li><a href="{{ path('participant.regle.list', {'participant' : participant.id}) }}">Liste des règles</a></li>
	<li class="active">{{ regle.label }}</li>
</ol>


<div class="well well-sm">
	<div class="header">
		<h5>{{ regle.label }}</h5>
	</div>
	
	<blockquote>{{ regle.description|markdown }}</blockquote>

	<div class="list-group-item">
		Si le PDF n'apparait pas correctement dans votre navigateur, <a href="{{ path('participant.regle.document',{'participant': participant.id, 'rule': regle.id}) }}">cliquez ici</a> pour télécharger le fichier.
	</div>
	<object type="application/pdf" width="100%" height="1200px" data="{{ path('participant.regle.document',{'participant': participant.id, 'rule': regle.id}) }}">
	</object>

</div>
{% endblock content %}